@using Nop.Web.Framework.Infrastructure
@model Mitbg.Plugin.Misc.VendorsExtensions.Models.VendorComissionCreateEditModel

@{
    Layout = "_AdminLayout";
    //page title
    ViewBag.Title = T("VendorComissionsEditor.Editor.AddNew").Text;
    //active menu item (system name)
    Html.SetActiveMenuItemSystemName("VendorComissions");
}

<form asp-controller="ComissionsConfigure" asp-action="Create" method="post">
    <div class="content-header clearfix">
        <h1 class="pull-left">
            @T("VendorComissionsEditor.Editor.AddNew")
            <small>
                <i class="fa fa-arrow-circle-left"></i>
                <a asp-action="ComissionsList">@T("VendorComissionsEditor.Editor.BackToList")</a>
            </small>
        </h1>
        <div class="pull-right">
            <button type="submit" name="save" class="btn bg-blue">
                <i class="fa fa-floppy-o"></i>
                @T("Admin.Common.Save")
            </button>
            <button type="submit" name="save-continue" class="btn bg-blue">
                <i class="fa fa-floppy-o"></i>
                @T("Admin.Common.SaveContinue")
            </button>
        </div>
    </div>
    @await Html.PartialAsync("~/Plugins/Mitbg.Plugin.Misc.VendorsExtensions/Views/ComissionsConfigure/_CreateOrUpdate.cshtml", Model)
</form>